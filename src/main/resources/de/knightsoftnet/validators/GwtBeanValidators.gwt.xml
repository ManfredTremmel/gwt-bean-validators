<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
 "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to='GwtBeanValidators'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User' />
  <inherits name='com.google.gwt.i18n.I18N'/>

  <!-- apache commons lang3 -->
  <inherits name="org.apache.commons.GWTCommonsLang3" />

  <!-- apache commons validator                                   -->
  <inherits name="org.apache.commons.GWTCommonsValidator" />

  <!-- simple reflection replacement on client side -->
  <inherits name="org.valkyrie.gwt.bean.ValkyrieBean"/> 

  <!-- Specify the app entry point class.                         -->
  <entry-point class='de.knightsoftnet.validators.client.GwtBeanValidators' />

  <!-- use own class for validation on client side
  <replace-with class="de.knightsoftnet.validators.client.ValidatorFactory">
    <when-type-is class="javax.validation.ValidatorFactory" />
  </replace-with> -->

  <!-- message resolver for localized error messages -->
  <replace-with class="de.knightsoftnet.validators.client.CustomValidationMessagesResolver">
    <when-type-is class="com.google.gwt.validation.client.UserValidationMessagesResolver" />
  </replace-with>

  <!-- Specify the paths for translatable code                    -->
  <source path='client' />
  <source path='shared' />

  <super-source path="supersource" />
</module>
